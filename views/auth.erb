  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-8">

          <h3>Acquiescence</h3>

          <table class="table">
            <thead>
              <tr>
                <th>me</th>
                <th><%= h params[:me] %></th>
              </tr>
            </thead>
            <tr>
              <th>client_id</th>
              <td><%= h params[:client_id] %></td>
            </tr>
            <tr>
              <th>redirect_uri</th>
              <td><%= h params[:redirect_uri] %></td>
            </tr>
            <tr>
              <th>scope(s)</th>
              <td><code><%= h params[:scope] %></code></td>
            </tr>
          </table>

          <form action="/auth/github" method="post">
            <div>
              <%= Rack::Csrf.csrf_tag %>
              <button type="submit" class="btn btn-success">
                Approve with GitHub
              </button>
            </p>
          </form>

        </div>
      </div>
    </div>
  </body>
</html>